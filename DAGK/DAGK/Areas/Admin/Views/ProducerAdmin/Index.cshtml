@model IEnumerable<WEB2Connection.Producer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_MainLayoutAdmin.cshtml";
}
<div id="page-wrapper">

    <div class="row">

        <div class="col-lg-12">
            <h1 class="page-header"> Producer </h1>
            <style>
                table {
                    border-collapse: collapse;
                    width: 70%;
                    margin: auto;
                }

                th, td {
                    text-align: center;
                    padding: 12px;
                    margin: auto;
                }

                tr:nth-child(even) {
                    background-color: #f2f2f2;
                }

                th {
                    background-color: #4CAF50;
                    color: white;
                    margin: auto;
                }
            </style>

            <table>
                <tr>
                    <th> ProducerID </th>
                    <th> ProducerName </th>
                    <th> LoGo </th>
                    <th> Deleted </th>
                    <td colspan="2">
                        <a href="#">
                            <img src="~/Areas/assets/img/Add.png" />
                        </a>
                    </td>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProducerID</td>
                        <td>@item.ProducerName</td>
                        <td>@item.LoGo</td>
                        <td>@item.Deleted</td>

                        <td><img src="~/Areas/assets/img/Edit.png" /></td>
                        <td><img src="~/Areas/assets/img/Delete.png" /></td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>
