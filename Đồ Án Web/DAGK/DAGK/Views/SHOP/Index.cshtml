@model PagedList.IPagedList<WEB2Connection.Product>
@using PagedList.Mvc ;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>PRODUCT</h2>
                </div>
            </div>
        </div>
    </div>
</div>

@foreach (var item in Model)
{
    
    <div class="col-md-3 col-sm-6">
        <div class="single-shop-product">
            <div class="product-upper">
              
                <a href="@Url.Action("Details", "SHOP", new { id = item.ProductID }, null)">
                    <img src= "/TN/img/@item.ImageURL" alt="" style="width :195px; height:240px;">
                </a>
            </div>
            <h2>@Html.ActionLink(item.ProductName, "Details", new { id=item.ProductID })</h2>
           
            <div class="product-carousel-price">
                <ins>@item.Price</ins> 
            </div>
            
            <div class="product-option-shop">
                <a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/canvas/shop/?add-to-cart=70">Add to cart</a>
            </div>
        </div>
    </div>
}

<div class="row">
    <div class="col-md-12">
        <div class="product-pagination text-center">
            <nav>
                <ul class="pagination">
                    @Html.PagedListPager(Model, page => Url.Action("Index", new { page}))
                </ul>
            </nav>
        </div>
    </div>
</div>
  

